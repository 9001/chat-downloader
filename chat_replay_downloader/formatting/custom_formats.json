

{
    "default": {
        "template": "{time_text|timestamp}{author.badges}{amount}{author.display_name|author.name}{message}",
        "keys": {
            "time_text": "[{}] ",
            "timestamp": {
                "template": "[{}] ",
                "format": "%Y-%m-%d %H:%M:%S"
            },
            "author.badges": {
                "template": "({}) ",
                "separator": ", "
            },
            "amount": "*{}* ",
            "message":": {}"
        }
    },
    "24_hour": {
        "inherit": "default",
        "template": "{time_text|timestamp}{author.badges}{amount}{author.display_name|author.name}: {message}",
        "keys": {
            "timestamp": {
                "prefix": "[",
                "format": "%H:%M",
                "suffix": "] "
            }
        }
    },
    "test": [
        {
            "matching": [
                "text_message"
            ],
            "template": "{time_text|timestamp}{author.badges}{amount}{author.display_name|author.name}: {message}",
            "keys": {
                "time_text": {
                    "prefix": "[",
                    "suffix": "] "
                },
                "timestamp": {
                    "prefix": "[",
                    "format": "%Y-%m-%d %H:%M:%S",
                    "suffix": "] "
                },
                "author.badges": {
                    "prefix": "(",
                    "separator": ", ",
                    "suffix": ") "
                },
                "amount": {
                    "prefix": "*",
                    "suffix": "* "
                }
            }
        },
        {
            "matching": [
                "ban_user"
            ],
            "template": "{timestamp}{banned_user} was {ban_duration|ban_type}.",
            "keys": {
                "timestamp": {
                    "prefix": "[",
                    "format": "%Y-%m-%d %H:%M:%S",
                    "suffix": "] "
                },
                "ban_duration": {
                    "prefix": "timed out for ",
                    "suffix": " seconds"
                },
                "ban_type": {
                    "suffix": "ly banned"
                }
            }
        }
    ]
}
